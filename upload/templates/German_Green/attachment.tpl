[allow-download]
	<div class="attachment">
		[allow-online]<a href="{online-view-link}" target="_blank">Datei online anzeigen: {name}</a>[/allow-online]
		<a href="{link}" title="{name}"><svg class="icon icon-file"><use xlink:href="#icon-file"></use></svg><b>{name}</b> [count] [{size}] (Downloads: {count})[/count]</a>
	</div>
[/allow-download]
[not-allow-download]
	<span class="attachment">Sie haben keinen Zugriff!</span>
[/not-allow-download]