[allow-download]
	<div class="attachment">
		<a href="{link}" title="{name}">
			<svg class="icon icon-arrow_right"><use xlink:href="#icon-arrow_right"></use></svg>
			<b>{name}</b> [count] [{size}] (Downloads: {count})[/count]
		</a>
		[allow-online]<br />Datei online anzeigen: <a href="{online-view-link}" target="_blank">{name}</a>[/allow-online]
	</div>
[/allow-download]
[not-allow-download]
	<div class="attachment_error">Sie haben keinen Zugriff!</div>
[/not-allow-download]